{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es2015",
    "baseUrl": ".",
    "paths": {
      "react": ["node_modules/@types/react"],
      "@cubejs-client/core": ["../packages/cubejs-client-core"]
    },
    "skipLibCheck": true
  },
  "exclude": ["./dist", "./test", "**/*.spec.ts"]
}
