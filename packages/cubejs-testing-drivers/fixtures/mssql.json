{
  "cube": {
    "environment": {
      "CUBEJS_DEV_MODE": true,
      "CUBEJS_API_SECRET": "mysupersecret",
      "CUBEJS_CACHE_AND_QUEUE_DRIVER": "cubestore",
      "CUBEJS_DB_TYPE": "mssql",
      "CUBEJS_DB_HOST": "data",
      "CUBEJS_DB_USER": "sa",
      "CUBEJS_DB_PASS": "123-Strong-Password-321"
    },
    "depends_on": ["data"],
    "links": ["data"],
    "volumes": [
      "./cube.js:/cube/conf/cube.js",
      "./schema/ecommerce.yaml:/cube/conf/schema/ecommerce.yaml"
    ],
    "ports" : ["4000"]
  },
  "data": {
    "image": "mcr.microsoft.com/mssql/server:2019-latest",
    "environment": {
      "MSSQL_SA_PASSWORD": "123-Strong-Password-321",
      "ACCEPT_EULA": "Y"
    },
    "ports" : ["1433"]
  },
  "cast": {
    "SELECT_PREFIX": "",
    "SELECT_SUFFIX": "",
    "DATE_PREFIX": "Convert(DATETIME, ",
    "DATE_SUFFIX": ", 126)",
    "CREATE_TBL_PREFIX": "SELECT * INTO ",
    "CREATE_TBL_SUFFIX": " FROM ",
    "CREATE_SUB_PREFIX": "(",
    "CREATE_SUB_SUFFIX": ") SUBQUERY;"
  },
  "preAggregations": {
    "Products": [],
    "Customers": [
      {
        "name": "Rolling",
        "measures": ["CUBE.count", "CUBE.runningTotal"]
      }
    ],
    "ECommerce": [
      {
        "name": "SimpleAnalysis",
        "dimensions": ["CUBE.productName"],
        "measures": [
          "CUBE.totalQuantity",
          "CUBE.avgDiscount",
          "CUBE.totalSales",
          "CUBE.totalProfit"
        ]
      },
      {
        "name": "TimeAnalysis",
        "time_dimension": "CUBE.orderDate",
        "granularity": "month",
        "partition_granularity": "month",
        "dimensions": ["CUBE.productName"],
        "measures": [
          "CUBE.totalQuantity",
          "CUBE.avgDiscount",
          "CUBE.totalSales",
          "CUBE.totalProfit"
        ]
      }
    ]
  },
  "skip": [
