{
  "extends": "../../tsconfig.base.json",
  "include": ["src", "test"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "types": ["node","oracledb","jest"],
    "typeRoots": ["../../node_modules/@types","node_modules/@types"]
  },
  "watchOptions": {
    "fallbackPolling": "priorityInterval"
  }
}
